{% extends '::base.html.twig' %}
{% block body %}

<div class="flex justify-center">
    <div class="col-md-5 well">
        <img class="img-thumbnail" src="{{ uploads_route ~ product.getImageUrl}}" alt="">
    </div>
    <div class="col-md-7">
        <div class="col-md-10">
            <h2>
                {{ product.getName }}
            </h2>
            <p>
                {{ product.getDescription }}
            </p>

            <p class="text-right">
                Price: $ {{ product.getPrice }}
            </p>

            <small class="pull-right">
                Available {{ product.getQuantity }}
            </small>
        </div>
        <div class="col-md-2 text-right">
            <a href="{{ path('product_edit', {'id': product.getId}) }}">Edit</a>
        </div>
        <div class="col-md-8 text-right pull-right">
            <form method="post" action="{{ path('cart_add') }}">
                <input class="hide" type="text" name="product_id" value="{{ product.getId }}">
                <label for="quantity">Quantity</label>
                <input type="number" id="quantity" name="quantity" value="1" min="1" max={{ product.getQuantity }}>
                <button class="btn btn-default pull-right" type="submit">
                    Add to cart
                </button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
