{% extends "::base.html.twig" %}

{% block title %}ShopBundle:PurchaceHistory:list{% endblock %}

{% block body %}
    <div class="col-md-6">
        <legend>
            {% if purchase_history|length < 1 %}
                No purchase history
            {% else %}
                Purchase history for user <a href="{{ path('user_get', {'id': purchase_history[0].getCustomerAccount.getUser.getUsername}) }}">
                    {{ purchase_history[0].getCustomerAccount.getUser.getUsername }}
                </a>
            {% endif %}

        </legend>
        {% if purchase_history|length > 0 %}
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Date of Purchase</th>
                    <th class="text-right">Amount</th>
                </tr>
                </thead>
                <tbody>
                {% for item in purchase_history %}
                    <tr>
                        <td>
                            <a href="{{ path('purchase_history_get', {'id': item.getId}) }}">
                                {{ item.getId }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('product_get', {'id': item.getProduct.getId}) }}">
                                {{ item.getProduct.getName }}
                            </a>
                        </td>
                        <td>
                            {{ item.getQuantity }}
                        </td>
                        <td>
                            {{ item.getDateCreated.format('Y-m-d') }}
                        </td>
                        <td class="text-right">
                            $ {{ item.getAmount }}
                        </td>
                    </tr>
                {% endfor %}
                <tr/>
                <tr>
                    <td/>
                    <td/>
                    <td/>
                    <td/>
                    <td class="text-right">
                        Total $ {{ total_amount }}
                    </td>
                </tr>
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
