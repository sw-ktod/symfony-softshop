{% extends "::base.html.twig" %}

{% block title %}ShopBundle:Cart:get{% endblock %}

{% block body %}

<div class="col-md-6">
    {% if cart|length == 0 %}
        <h3>
            Cart is empty
        </h3>
        <p>
            Browse newest products
        </p>
    {% else %}
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th/>
                <th>Product</th>
                <th class="text-right">Quantity</th>
                <th class="text-right">Price</th>
                <th class="text-right">Total</th>
            </tr>
            </thead>
            <tbody>
            {% for item in cart %}
                <tr>
                    <td>
                        <form method="post" action="{{ path('cart_remove') }}">
                            <input class="hide" type="text" name="product_id" value="{{ item.product.getId }}">
                            <button class="btn btn-xs btn-default fa fa-times" type="submit" />
                        </form>
                    </td>
                    <td>
                        {{ item.product.getName }}
                    </td>
                    <td class="text-right">
                        {{ item.quantity }}
                    </td>
                    <td class="text-right">
                        {{ item.product.getPrice }}
                    </td>
                    <td class="text-right">
                        {{ item.product.getPrice * item.quantity }}
                    </td>
                </tr>
            {% endfor %}
            <tr/>
            <tr>
                <td/>
                <td/>
                <td/>
                <td/>
                <td class="text-right">
                    Total: {{ total }}
                </td>
            </tr>
            </tbody>
        </table>
    {% endif %}


</div>
{% endblock %}
